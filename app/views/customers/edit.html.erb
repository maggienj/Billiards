
<h1>Edit Customer Detail</h1>

<%= form_for @customer, :url =>{:action => "update", :id =>@customer} do |f| %>

<p>First Name: <%= f.text_field 'firstname' %></p>
<p>Name: <%= f.text_field  'lastname' %></p>
<p>Email: <%= f.text_field  'email' %></p>
<p>city: <%= f.text_field  'city' %></p>
<p>Zip: <%= f.text_field  'zip' %></p>
<p>State: <%= f.text_field  'state' %></p>

<%= f.submit "Save changes" %>
<% end %>

<%= link_to 'Back', {:action => 'index' } %>

